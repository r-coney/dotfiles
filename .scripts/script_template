#!/bin/bash
# ========================
# Constants and setup
# ========================
readonly SCRIPT_DIR="${HOME}/.scripts"
source "${SCRIPT_DIR}/_utils.sh"

# ========================
# Usage/help message
# ========================
function usage {
	cat <<EOF
$(basename "$0") - [Brief description of what this script does]

Usage:
  $(basename "$0") [options]

Description:
  This script is a reusable Bash template with argument parsing, logging, and structured output.

Options:
  -x           Description for option X
  -y           Description for option Y
  -z           Description for option Z
  -h           Show this help message and exit

Examples:
  $(basename "$0") -x
  $(basename "$0") -y -z

EOF
}

# ========================
# Argument parsing
# ========================
if [ $# -eq 0 ]; then
	usage
	exit 1
fi

while getopts ":xzyh" optKey; do
	case "$optKey" in
	x)
		info "âœ… Option X selected"
		;;
	y)
		info "âœ… Option Y selected"
		;;
	z)
		info "âœ… Option Z selected"
		;;
	h)
		usage
		exit 0
		;;
	*)
		warning "âš ï¸  Invalid option: -$OPTARG"
		usage
		exit 1
		;;
	esac
done

# ========================
# Main logic
# ========================

title "ðŸŽ¯ Running main script logic..."

# TODO: Add main operations here
# echo "Do something..."

success "ðŸŽ‰ Done."
